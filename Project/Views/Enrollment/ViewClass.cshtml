@model IEnumerable<Project.Models.Class>

@{
    ViewBag.Title = "ViewClass";
}

<h2>ViewClass</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassId)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        <td>

            @Html.ActionLink("Delete", "Delete", new { item.ClassId }, new {@class="btn-danger btn"})


        </td>
    </tr>
}

</table>
