<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .sidebar {
            width: 220px;
        }

        .sidebar {
            position: fixed;
            top: 51px;
            bottom: 0;
            left: 0;
            z-index: 1000;
            display: block;
            padding: 20px;
            overflow-x: hidden;
            overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
            background-color: #f5f5f5;
            border-right: 1px solid #eee;
        }
        .icon i {
            color: #0cb8b6;
            font-size: 45px;
            margin-left:20px;
            margin-bottom: 25px;
        }
        .section-title {
            margin-left: 20px;
            margin-bottom: 30px;
        }

        .service-info {
            margin-left: 20px;
            margin-bottom: 20px;
        }

        .icon-info h4 {
            margin-left: 20px;
            padding-bottom: 15px;
        }

        .icon-info p {
            margin-left: 20px;
            font-size: 15px !important;
        }
        .section {
            margin-left:20px;
        
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("College Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="container-fluid">
            <div class="row">
                <div class="sidebar">
                    <ul class="nav nav-sidebar">
                        @if (User.IsInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("Register Student", "RegisterStu", "Account", null, new { id = "item 1" })</li>
                            <li>@Html.ActionLink("Register Parent", "RegisterParent", "Account", null, new { id = "item 2" })</li>
                            <li>@Html.ActionLink("Register Teacher", "RegisterTeacher", "Account", null, new { id = "item 3" })</li>
                            <li>@Html.ActionLink("Add Enrollment", "Add", "Enrollment", null, new { id = "item 2" })</li>
                            <li>@Html.ActionLink("Assign Teacher", "AssignTeacher", "Enrollment", null, new { id = "item 2" })</li>
                            <li>@Html.ActionLink("View Enrollments", "ViewEnrollments", "Enrollment")</li>
                            <li>@Html.ActionLink("View Courses", "ViewCourses", "Course")</li>
                            <li>@Html.ActionLink("Add Course", "Add", "Course", null, new { id = "item 1" })</li>
                            <li>@Html.ActionLink("Add Class", "ADDCLASS", "Enrollment")</li>
                            <li>@Html.ActionLink("View Classes", "ViewClass", "Enrollment")</li>
                            <li>@Html.ActionLink("View Departments", "ViewDepartments", "Enrollment")</li>
                            <li>@Html.ActionLink("Add Department", "AddDepartment", "Enrollment")</li>
                        }
                        @if (User.IsInRole("Teacher,Administrator"))
                        {
                            <li>@Html.ActionLink("Add Attendance", "AddAttendance", "Home")</li>
                            <li>@Html.ActionLink("Add Material", "AddMaterials", "Course")</li>
                        }
                        @if (User.IsInRole("Student"))
                        {
                            <li>@Html.ActionLink("Get Grades", "GetGrades", "Grade")</li>
                            <li>@Html.ActionLink("Get Attendances", "GetAttendances", "Home")</li>
                            
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
    <div id="myCarousel" class="carousel slide" data-interval="2000"
         data-ride="carousel" data-pause="hover" data-wrap="true" style="margin-left:15%;">
        <!– Indicators –>
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <!– Wrapper for slides –>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/a1.jpg" alt="" style=" width:100% ; max-height:450px;">
            </div>
            <div class="item">
                <img src="~/images/a2.jpg" alt="" style=" width:100% ; max-height:450px;">
            </div>

            <div class="item">
                <img src="~/images/a3.jpg" alt="" style=" width:100% ;max-height:450px;">
            </div>

            <div class="item">
                <img src="~/images/a4.jpg" alt="" style=" width:100% ;max-height:450px;">
            </div>
        </div>

        <!– Left and right controls –>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!--/ banner-->
    <!--service-->
    <section id="service" name ="section" class="section-padding" style="margin-left:230px;">
        <div class="containers">
            <div class="row">
                <div class="col-md-4 col-sm-4">
                    <h1 class="ser-title" style="margin-top:270px;">Our Service</h1>
                   
                    <hr class="botm-line">
                    <p>The Services Offered By This Website</p>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="service-info">
                        <div class="icon">
                            <i class="fa fa-stethoscope"></i>
                        </div>
                        <div class="icon-info">
                            <h3>24 Hour Support</h3>
                            <img src="~/Images/download.png" style-="width = 40px; height = 40px;">
                            <p>When You Have Leave A message By Contact Us Page And We Will Fix It Fastly</p>
                        </div>
                    </div>
                    <div class="service-info">
                       
                            <h3>Student Jobs</h3>
                            <img src="~/Images/a.png" style-="width = 40px; height = 40px;">
                        
                        <div class="icon-info">
                            <p>Student Have The Ability To Access Their Grades And Attendance In Courses.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4" style="margin-top:58px;">
                    <div class="service-info">
                            <h3>Administrator</h3>
                      
                            <img src="~/Images/s.jfif" style-="width = 40px; height = 40px;">
                        
                        <div class="icon-info">
                            <p>Administrator Is The Manager Of School Have Ability To Add Courses , Department , Enroll Student In Course,Assign Teacher To Course And Register Of Those.</p>
                        </div>
                    </div>
                    <div class="service-info">
                            <h3>Teacher</h3>
                       
                            <img src="~/Images/in.jfif" style-="width = 40px; height = 40px;">
                       
                        <div class="icon-info">
                            <p>Ability To Add Material Of course , and Add Grades and Add Attendance.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <center>  <p>&copy; @DateTime.Now.Year - College Management System Application</p> </center>
        </footer>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</body>
</html>
